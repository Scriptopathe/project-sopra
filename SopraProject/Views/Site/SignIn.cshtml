<div class="well">
	<h4>Login</h4>
	<!-- Logged alert -->
	<div class="alert alert-success" ng-show="logged">
		You are currently logged in as {{ username }}
	</div>

	<!-- Not logged alert -->
	<div class="alert alert-danger" ng-show="!logged">
		You are currently not logged in.
	</div>


	<form class="form-horizontal" role="form" action="@Url.Action("Login", "Site", new { })" method="post">
		<input style="display: none;" name="next" value="@Request["next"]"></input>
		<div class="form-group">
			<label class="control-label col-sm-1" for="username">Username:</label>
			<div class="col-sm-4">
			  <input type="text" class="form-control" name="username" value="user1" placeholder="Enter username">
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-1" for="password">Password:</label>
			<div class="col-sm-4">
			  <input type="password" class="form-control" name="password" value="User1pass" placeholder="Enter password">
			</div>
		</div>
		<!-- 
		<div class="form-group">
			<div class="col-sm-offset-1 col-sm-10">
			  <div class="checkbox">
			    <label><input type="checkbox"> Remember me</label>
			  </div>
			</div>
		</div>
		-->
		<div class="form-group">
			<div class="col-sm-offset-1 col-sm-10">
			<strong style="color: #AA0000;">@Request["Status"]</strong>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-1 col-sm-10">
			  <button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</div>

	</form>
</div>